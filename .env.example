# Bus Vision - Environment Variables
# ===================================
# Copy this file to .env and configure

# Application
APP_NAME=Bus Vision API
DEBUG=false

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/bus_vision

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security
SECRET_KEY=change-this-to-a-random-string-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# File Storage
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE_MB=5120

# S3 (optional)
USE_S3=false
S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Detection
MODEL_PATH=yolov8m.pt
DEFAULT_CONFIDENCE=0.5

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
